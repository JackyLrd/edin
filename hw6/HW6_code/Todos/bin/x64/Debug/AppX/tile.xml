<?xml version="1.0" encoding="utf-8" ?>
<tile>
  <visual displayName="TodoList">

    <binding template="TileSmall" displayName="TodoList">
      <image src="ms-appx:///Assets/background.jpg" placement="background"/>
      <text hint-style="caption">{0}</text>
      <text hint-style="caption">{1}</text>
    </binding>

    <binding template="TileMedium" displayName="TodoList">
      <image src="ms-appx:///Assets/background.jpg" placement="background"/>
      <text hint-style="caption">{0}</text>
      <text hint-style="caption">{1}</text>
    </binding>

    <binding template="TileWide" displayName="TodoList">
      <image src="ms-appx:///Assets/background.jpg" placement="background"/>
      <text hint-style="title">{0}</text>
      <text hint-style="caption">{1}</text>
    </binding>

    <binding template="TileLarge" displayName="TodoList">
      <image src="ms-appx:///Assets/background.jpg" placement="background"/>
      <text hint-style="title">{0}</text>
      <text hint-style="caption">{1}</text>
    </binding>

  </visual>
</tile>